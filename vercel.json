{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/auth/kycu",
      "destination": "/login",
      "permanent": true
    },
    {
      "source": "/auth/regjistrohu",
      "destination": "/register",
      "permanent": true
    },
    {
      "source": "/landing",
      "destination": "/home",
      "permanent": true
    },
    {
      "source": "/profili",
      "destination": "/profile",
      "permanent": true
    },
    {
      "source": "/eksploro",
      "destination": "/explore",
      "permanent": true
    },
    {
      "source": "/tregu",
      "destination": "/marketplace",
      "permanent": true
    },
    {
      "source": "/rreth-nesh",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/qendra-e-dijes",
      "destination": "/knowledge",
      "permanent": true
    },
    {
      "source": "/partnere",
      "destination": "/partners",
      "permanent": true
    },
    {
      "source": "/kontakti",
      "destination": "/contact",
      "permanent": true
    },
    {
      "source": "/ndihme",
      "destination": "/help",
      "permanent": true
    },
    {
      "source": "/kushtet-e-perdorimit",
      "destination": "/legal/terms",
      "permanent": true
    }
  ]
}
